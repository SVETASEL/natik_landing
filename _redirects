# Cloudflare Pages redirects for Natik

# Admin panel routing - direct file access first
/admin-login.html /admin-login.html 200
/admin-dashboard.html /admin-dashboard.html 200
/admin-articles.html /admin-articles.html 200
/admin-article-editor.html /admin-article-editor.html 200

# Admin panel routing - friendly URLs
/admin /admin-dashboard.html 200
/admin/ /admin-dashboard.html 200
/admin/login /admin-login.html 200
/admin/articles /admin-articles.html 200
/admin/articles/new /admin-article-editor.html 200
/admin/articles/edit/* /admin-article-editor.html 200

# News routing
/news/* /news-detail.html 200
/noticias/* /news-detail.html 200

# API fallback (if using external backend)
/api/* https://natik-landing.onrender.com/api/:splat 200
